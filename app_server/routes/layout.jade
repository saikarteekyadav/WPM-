doctype html
html
  head
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    // fallback if "title" is not passed
    title #{title || 'Loc8r App'}
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    // ✅ use CDN for Font Awesome to avoid 404
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav.navbar.fixed-top.navbar-expand-md.navbar-light.bg-light
      .container
        a.navbar-brand(href='/') Loc8r
        button.navbar-toggler(
          type='button',
          data-toggle='collapse',
          data-target='#navbarMain'
        )
          span.navbar-toggler-icon
        #navbarMain.navbar-collapse.collapse
          ul.navbar-nav.mr-auto
            li.nav-item
              a.nav-link(href='/about/') About
    .container.content
      block content
    footer.mt-4.py-3.bg-light
      .row
        .col-12.text-center
          small &copy; Getting MEAN – Simon Holmes/Clive Harber 2018

    // ✅ Script tags with quoted attributes (Jade safe)
    script(
      src='https://code.jquery.com/jquery-3.3.1.slim.min.js',
      'integrity'='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo',
      'crossorigin'='anonymous'
    )
    script(
      src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js',
      'integrity'='sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49',
      'crossorigin'='anonymous'
    )
    script(src='/javascripts/bootstrap.min.js')
